  height: 80rpx;
  .btn {
    line-height: 68rpx;
    width: 372rpx;
  }
}
.footer {
  z-index: 99999;
  height: 100rpx;
  .btn {
    line-height: 104rpx;
    width: 249rpx;
  }
}
.cover-text {
  white-space: normal;
  width: 562rpx;
  position: absolute;
  padding: 40rpx;
  z-index: 9999;
  line-height: 50rpx;
  font-size: 32rpx;
}
.cover-input {
  padding: 40rpx;
  opacity: 0;
  width: 562rpx;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -300rpx 50rpx 0 50rpx;
  border-radius: 6rpx;
}
.button-div {
  display: flex;
  justify-content: space-around;
  margin-top: 38rpx;
  height: 70rpx;
  > view {
    flex: 5;
    padding: 10px;
    font: 20px 'microsoft yahei';
    text-align: center;
    border-top: 1px solid #e8e8ea;
  }
