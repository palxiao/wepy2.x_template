<template>
    <view>
        <scroll-view scroll-y class="DrawerPage {{modalName=='viewModal'?'show':''}}">
            <slot></slot>
            <view v-if="show" @tap="showModal('viewModal')" class="bg-gradual-blue padding radius text-center shadow-blur daka-f-btn">
                <view class="text">ÊâìÂç°</view>
            </view>
        </scroll-view>
        <view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
            <text class="cuIcon-pullright"></text>
        </view>

        <scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'||modalName=='bottomModal'?'show':''}}">
            <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
                <!-- ÊâìÂç°ÁïåÈù¢ -->
                <view class="padding text-center">
                    <view class="padding-lr bg-white">
                        <view class="solid-bottom padding">Let's start frog clock in üê∏</view>
                        <view v-show="!isLogin" class="padding">ÁôªÂΩïÈùíËõôÊâìÂç°ÁªßÁª≠Êìç‰Ωú</view>
                        <view v-show="isLogin" @tap="start()" class="margin radius bg-gradual-blue shadow-blur daka_start animation-{{animation}}">
                            <text class="daka_text line-clamp-1">{{statusText||'Click Start'}}</text>
                            <image v-show="statusText" src="cloud://daka.6461-daka-1301019118/wave.gif" mode="aspectFill" class="gif-black response" style="height:100%;"></image>
                        </view>
                    </view>
                </view>
                <!-- Ê†áÁ≠æÈÄâÊã© -->
                <m-label v-if="isLogin" :show="modalName=='bottomModal'" @choose="load()" @close="showModal('viewModal')" />

                <!-- ÁôªÂΩïÁïåÈù¢ -->
                <m-login v-if="!isLogin" @done="isLogin=true;load();" />

            </view>
            <!-- ÊâìÂç°ËÆ∞ÂΩïÂàóË°® -->
            <!-- <m-record /> -->

        </scroll-view>

        <!-- ÁªìÊùü‰ªªÂä° -->
        <m-confirm :data="current" :show="modalName=='EndModal'" @done="done" @close="showModal('viewModal')" />
    </view>
</template>
 
<script>
import wepy from '@wepy/core';
// import eventHub from '@/utils/common/eventHub';
import store from '@/store';
// import testMixin from '@/mixins/test';
import api from '@/api'
import { vibrate } from '@/common/utils'


wepy.component({
    store,
    options: {
        addGlobalClass: true,
        multipleSlots: true // Âú®ÁªÑ‰ª∂ÂÆö‰πâÊó∂ÁöÑÈÄâÈ°π‰∏≠ÂêØÁî®Â§öslotÊîØÊåÅ
    },
    hooks: {
        // Page Á∫ßÂà´ hook, Âè™ÂØπÂΩìÂâç Page ÁöÑ setData ÁîüÊïà„ÄÇ
    },
    props: {
        show: Boolean
    },
    //   mixins: [testMixin],
    data: {
        modalName: null,
        animation: '',
        isLogin: wx.getStorageSync('token') || null,
        statusText: '',
        current: {}
    },

    computed: {

    },

    methods: {
        async load () {
            if (!this.isLogin) { return }
            const { result } = await api.getRecord()
            if (!result.after_time) {
                this.statusText = result.event_name
                this.current = result
            } else { this.statusText = '' }
            // this.getList()
        },
        // async getList() {
        //     const { result } = await api.getRecordList()
        //     console.log(result);
        // },
        showModal (e) {
            if (e === 'viewModal') { this.load() }
            vibrate()
            this.modalName = e
        },
        hideModal (e) {
            this.modalName = null
        },
        start () {
            vibrate()
            this.animation = 'shake'
            this.modalName = this.statusText ? 'EndModal' : 'bottomModal'
            if (this.modalName === 'bottomModal') {
                wx.requestSubscribeMessage({
                    tmplIds: ['D2pHbPhfLo74vomL8240r16yXVbKsZXjJsFYq2FBorM', 'PlBadng7ysQ69eeB28QnTYQCxHWdDtE_IKYkwMoWw68'],
                })
            }
            setTimeout(() => {
                this.animation = ''
            }, 800);
        },
        done () {
            this.hideModal()
            this.statusText = ''
        }
    },
    events: {},
});
</script>
 
